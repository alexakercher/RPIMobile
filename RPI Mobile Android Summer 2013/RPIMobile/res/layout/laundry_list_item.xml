<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="3dp"
    android:orientation="vertical" 
    android:background="#ffffff">

    <TextView
        
        android:id="@+id/building_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="10pt"
        android:text="Building Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="25"
            android:gravity="center">

            <TextView
                android:id="@+id/availwashers_TITLE"
                android:textSize="5pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Washers\nAvailable" />

            <TextView
                android:id="@+id/available_washers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="9pt"
                android:text="6" />

        </LinearLayout>

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="25"
            android:gravity="center">

            <TextView
                android:id="@+id/avildryers_TITLE"
                android:textSize="5pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Dryers\nAvailable" />

            <TextView
                android:id="@+id/available_dryers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="9pt"
                android:text="1" />

        </LinearLayout>        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="25"
            android:gravity="center">

            <TextView
                android:id="@+id/used_washers_TITLE"
                android:textSize="5pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Washers\nIn Use" />

            <TextView
                android:id="@+id/used_washers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="9pt"
                android:text="6" />

        </LinearLayout>        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="25"
            android:gravity="center">

            <TextView
                android:id="@+id/used_dryers_TITLE"
                android:textSize="5pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dryers\nIn Use" />

            <TextView
                android:id="@+id/used_dryers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="9pt"
                android:text="6" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
